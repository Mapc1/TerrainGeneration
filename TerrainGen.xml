<?xml version="1.0" encoding="UTF-8"?>
<project name="Terrain Generation VTR 24" width="1280" height="720">
  <assets>
    <attributes>
      <attribute type="STATE" name="OCTAVES" data="INT" value="1"/>
      <attribute type="STATE" name="STARTING_AMPLITUDE" data="FLOAT" value="1.0"/>
      <attribute type="STATE" name="STARTING_FREQ" data="FLOAT" value="0.01"/>
      <attribute type="STATE" name="GAIN" data="FLOAT" value="0.5"/>
      <attribute type="STATE" name="LACUNARITY" data="FLOAT" value="2.0"/>
      <attribute type="STATE" name="DISPLACEMENT_STRENGTH" data="FLOAT" value="100.0"/>
      <attribute type="STATE" name="CONTINENTAL_POWER" data="FLOAT" value="1.0"/>
      <attribute type="STATE" name="EROSION_POWER" data="FLOAT" value="1.0"/>
      <attribute type="STATE" name="PEAKS_AND_VALLEYS_POWER" data="FLOAT" value="0.5"/>
      <attribute type="STATE" name="WATER_LEVEL" data="FLOAT" value="115"/>
    </attributes>

    <scenes>
      <scene name="Skybox">
        <geometry name="Skybox" type="BOX" material="Skybox">
          <SCALE x="1000" y="1000" z="1000"/>
        </geometry>
      </scene>

      <scene name="Plane">
        <geometry name="plane" type="GRID" material="Plane" LENGTH="1024" DIVISIONS="1024"/>
      </scene>
    </scenes>

    <viewports>
      <viewport name="MainViewport">
        <CLEAR_COLOR r="0.0" g="0.0" b="0.0"/>
      </viewport>

      <viewport name="LeftViewport">
        <CLEAR_COLOR r="0.0" g="0.0" b="0.0"/>
        <SIZE width="0.5" height="1.0"/>
        <ORIGIN x="0" y="0"/>
      </viewport>
      <viewport name="RightViewport">
        <CLEAR_COLOR r="0.0" g="0.0" b="0.0"/>
        <SIZE width="0.5" height="1.0"/>
        <ORIGIN x="0.5" y="0"/>
      </viewport>
    </viewports>

    <cameras>
      <camera name="MainCamera">
        <viewport name="MainViewport"/>
        <POSITION x="0.402" y="0.974" z="1.341" />
        <LOOK_AT_POINT x="0" y="0" z="0" />
        <NEAR value="0.01" />
        <FAR value="5000"/>
      </camera>
    </cameras>

    <lights>
      <light name="Sun">
        <DIRECTION x="0.2" y="-0.8" z="0.0"/>
        <COLOR r="1.0" g="1.0" b="1.0"/>
      </light>
    </lights>

    <materialLibs>
      <materialLib filename="TerrainGen.mlib"/>
    </materialLibs>
  </assets>

  <pipelines default="TerrainGen">
    <pipeline name="TerrainGen" defaultCamera="MainCamera">
      <pass class="compute" name="GenContinental">
        <material name="GenContinental" fromLibrary="TerrainGen" dimX="1024" dimY="1024" dimZ="1"/>
      </pass>

      <pass class="compute" name="GenErosion">
        <material name="GenErosion" fromLibrary="TerrainGen" dimX="1024" dimY="1024" dimZ="1"/>
      </pass>

      <pass class="compute" name="GenPeaksAndValleys">
        <material name="GenPeaksAndValleys" fromLibrary="TerrainGen" dimX="1024" dimY="1024" dimZ="1"/>
      </pass>

      <pass class="compute" name="GenTemperature">
        <material name="GenTemperature" fromLibrary="TerrainGen" dimX="1024" dimY="1024" dimZ="1"/>
      </pass>

      <pass class="compute" name="GenHumidity">
        <material name="GenHumidity" fromLibrary="TerrainGen" dimX="1024" dimY="1024" dimZ="1"/>
      </pass>

      <pass class="compute" name="GenDisplacement">
        <material name="GenDisplacement" fromLibrary="TerrainGen" dimX="1024" dimY="1024" dimZ="1"/>
      </pass>

      <pass class="depthmap" name="GenShadowMap">
        <scenes>
          <scene name="Plane"/>
        </scenes>
        <camera name="MainCamera"/>
        <lights>
          <light name="Sun"/>
        </lights>
        <renderTarget name="ShadowMap" fromLibrary="TerrainGen"/>
        <materialMaps>
          <map fromMaterial="Plane" toLibrary="TerrainGen" toMaterial="Terrain"/>
        </materialMaps>
      <injectionMaps>
        <map toMaterial="*">
          <shader fromMaterial="GenShadowMap" fromLibrary="TerrainGen"/>
        </map>
      </injectionMaps>
      </pass>

      <pass name="Render">
        <scenes>
          <scene name="Plane"/>
          <scene name="Skybox"/>
        </scenes>
        <lights>
          <light name="Sun"/>
        </lights>
        <camera name="MainCamera"/>

        <injectionMaps>
          <map toMaterial="*">
            <shader fromMaterial="Terrain" fromLibrary="TerrainGen"/>
            <textures>
              <texture name="DisplacementMap" fromLibrary="TerrainGen" toUnit="0">
                <MIN_FILTER value="LINEAR"/>
                <MAG_FILTER value="LINEAR"/>
              </texture>
            </textures>
          </map>
        </injectionMaps>
        <materialMaps>
          <map fromMaterial="Plane" toLibrary="TerrainGen" toMaterial="Terrain"/>
          <map fromMaterial="Skybox" toLibrary="TerrainGen" toMaterial="Skybox"/>
        </materialMaps>
      </pass>
    </pipeline>

    <pipeline name="NoiseVisualization">
      <pass class="compute" name="GenContinental">
        <material name="GenContinental" fromLibrary="TerrainGen" dimX="1024" dimY="1024" dimZ="1"/>
      </pass>

      <pass class="compute" name="GenErosion">
        <material name="GenErosion" fromLibrary="TerrainGen" dimX="1024" dimY="1024" dimZ="1"/>
      </pass>

      <pass class="quad" name="DisplayContinentalTexture">
        <COLOR_CLEAR value="true" />
        <viewport name="LeftViewport"/>
        <material name="DisplayContinentalTexture" fromLibrary="TerrainGen"/>
      </pass>
      <pass class="quad" name="DisplayErosionTexture">
        <COLOR_CLEAR value="true" />
        <viewport name="RightViewport"/>
        <material name="DisplayErosionTexture" fromLibrary="TerrainGen"/>
      </pass>
    </pipeline>
  </pipelines>

  <interface>
    <window label="Continental Parameters">
      <var label="Number of octaves" type="STATE" context="TerrainGen::GenContinental" component="OCTAVES" def="min=1 max=10"/>
      <var label="Starting amplitude" type="STATE" context="TerrainGen::GenContinental" component="STARTING_AMPLITUDE" def="min=0.0001 max=10"/>
      <var label="Starting frequency" type="STATE" context="TerrainGen::GenContinental" component="STARTING_FREQ" def="min=0.0001 max=3"/>
      <var label="Gain" type="STATE" context="TerrainGen::GenContinental" component="GAIN" def="min=0.0001 max=3"/>
      <var label="Lacunarity" type="STATE" context="TerrainGen::GenContinental" component="LACUNARITY" def="min=0.0001 max=3"/>
    </window>

    <window label="Erosion Parameters">
      <var label="Number of octaves" type="STATE" context="TerrainGen::GenErosion" component="OCTAVES" def="min=1 max=10"/>
      <var label="Starting amplitude" type="STATE" context="TerrainGen::GenErosion" component="STARTING_AMPLITUDE" def="min=0.0001 max=10"/>
      <var label="Starting frequency" type="STATE" context="TerrainGen::GenErosion" component="STARTING_FREQ" def="min=0.0001 max=3"/>
      <var label="Gain" type="STATE" context="TerrainGen::GenErosion" component="GAIN" def="min=0.0001 max=3"/>
      <var label="Lacunarity" type="STATE" context="TerrainGen::GenErosion" component="LACUNARITY" def="min=0.0001 max=3"/>
    </window>

    <window label="Peaks and valleys Parameters">
      <var label="Number of octaves" type="STATE" context="TerrainGen::GenPeaksAndValleys" component="OCTAVES" def="min=1 max=10"/>
      <var label="Starting amplitude" type="STATE" context="TerrainGen::GenPeaksAndValleys" component="STARTING_AMPLITUDE" def="min=0.0001 max=10"/>
      <var label="Starting frequency" type="STATE" context="TerrainGen::GenPeaksAndValleys" component="STARTING_FREQ" def="min=0.0001 max=3"/>
      <var label="Gain" type="STATE" context="TerrainGen::GenPeaksAndValleys" component="GAIN" def="min=0.0001 max=3"/>
      <var label="Lacunarity" type="STATE" context="TerrainGen::GenPeaksAndValleys" component="LACUNARITY" def="min=0.0001 max=3"/>
    </window>

    <window label="Temperature Parameters">
      <var label="Number of octaves" type="STATE" context="TerrainGen::GenTemperature" component="OCTAVES" def="min=1 max=10"/>
      <var label="Starting amplitude" type="STATE" context="TerrainGen::GenTemperature" component="STARTING_AMPLITUDE" def="min=0.0001 max=10"/>
      <var label="Starting frequency" type="STATE" context="TerrainGen::GenTemperature" component="STARTING_FREQ" def="min=0.0001 max=3"/>
      <var label="Gain" type="STATE" context="TerrainGen::GenTemperature" component="GAIN" def="min=0.0001 max=3"/>
      <var label="Lacunarity" type="STATE" context="TerrainGen::GenTemperature" component="LACUNARITY" def="min=0.0001 max=3"/>
    </window>

    <window label="Humidity Parameters">
      <var label="Number of octaves" type="STATE" context="TerrainGen::GenHumidity" component="OCTAVES" def="min=1 max=10"/>
      <var label="Starting amplitude" type="STATE" context="TerrainGen::GenHumidity" component="STARTING_AMPLITUDE" def="min=0.0001 max=10"/>
      <var label="Starting frequency" type="STATE" context="TerrainGen::GenHumidity" component="STARTING_FREQ" def="min=0.0001 max=3"/>
      <var label="Gain" type="STATE" context="TerrainGen::GenHumidity" component="GAIN" def="min=0.0001 max=3"/>
      <var label="Lacunarity" type="STATE" context="TerrainGen::GenHumidity" component="LACUNARITY" def="min=0.0001 max=3"/>
    </window>

    <window label="Displacement Parameters">
      <var label="Displacement strength" type="STATE" context="TerrainGen::GenDisplacement" component="DISPLACEMENT_STRENGTH" def="min=1 max=1000"/>
      <var label="Continental power" type="STATE" context="TerrainGen::GenDisplacement" component="CONTINENTAL_POWER" def="min=0 max=10"/>
      <var label="Erosion power" type="STATE" context="TerrainGen::GenDisplacement" component="EROSION_POWER" def="min=0 max=10"/>
      <var label="Peaks and valleys power" type="STATE" context="TerrainGen::GenDisplacement" component="PEAKS_AND_VALLEYS_POWER" def="min=0 max=10"/>
    </window>

    <window label="Other settings">
      <var label="Water Level" type="STATE" context="TerrainGen::GenDisplacement" component="WATER_LEVEL" def="min=0 max=200"/>
      <pipelineList label="Pipeline list"/>
    </window>
  </interface>
</project>